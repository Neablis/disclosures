{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./backend/@types"],
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "@types"],
  "exclude": ["node_modules", "dist"]
}
